---

import DefaultLayout from '../layouts/DefaultLayout.astro'
import Headline from "../components/Headline.astro";
import Container from "../components/Container.astro";
import ThemeSelect from "../components/Form/ThemeSelect.svelte";
import Form from "../components/Form/Form.svelte";

import '@emdgroup-liquid/liquid/dist/css/liquid.global.css'

--- 

<script>
  window['__LD_ASSET_PATH__'] = window.location.origin + ''
    ; (async () => {
      const { defineCustomElements } = await import('@emdgroup-liquid/liquid/dist/loader')
      defineCustomElements()
    })()
</script>

<head>
  <meta charset="utf-8">
</head>

<DefaultLayout>
  <div class="container mx-auto px-ld-24 pt-ld-40 pb-24 relative max-w-2xl">
    <Headline>Liquid Sandbox App</Headline>
    <!-- <ld-typo variant="b1" class="text-vy mb-ld-40">Liquid Sandbox App</ld-typo> -->
    <Container>
      <ThemeSelect client:only="svelte"></ThemeSelect>
      <Form client:only="svelte" />
    </Container>
  </div>
</DefaultLayout>